/* CUSTOM STORY STYLE */

.section-title
    font-size 1.75rem
.story-text
    margin-left 20%
    margin-right 20%

.scroll-container
    position: relative
    margin-bottom: 5%

.scroll__graphic
    position: sticky
    top: 0
    left: 0
    width: 100%
    margin: 0
    -webkit-transform: translate3d(0, 0, 0)
    -moz-transform: translate3d(0, 0, 0)
    transform: translate3d(0, 0, 0)
    background-color: #FEF4E6
    z-index: 0
    opacity: 1

.scroll_graphic .chart
    position: sticky

.scroll__text
    position: relative

.step > p
    background-color: rgba(255, 255, 255, 0.9)
    color: #3b3b3b
    padding: 1rem
    text-align: center
    margin-left: 30%
    margin-right: 30%

.step:last-child
    margin-bottom: 0

.hidden
    opacity: 0

.sticky > img
    position: absolute

