/* CUSTOM STORY STYLE */

a
    color #b92025
a:visited
    color #9f9f9f
.section-title
    font-size 1.25rem
    font-weight bold
.story-text
    margin-left 20%
    margin-right 20%
    font-family "Open Sans", Arial,Helvetica Neue,Helvetica,sans-serif
    font-size calc(17px + 0.2vw)
    @media only screen and (max-width: 768px)
        margin-left 10%
        margin-right 10%
.methodology
    background-color #FEF4E6
    margin-left 20%
    margin-right 20%
    margin-top 3rem
    padding-top 1rem
    padding-bottom 1rem
    @media only screen and (max-width: 768px)
        margin-left 5%
        margin-right 5%
.methodology-title
    margin-left 5%
    margin-right 5%
    @media only screen and (max-width: 768px)
        margin-left 2.5%
        margin-right 2.5%
.methodology-text
    margin-left 10%
    margin-right 10%
    @media only screen and (max-width: 768px)
        margin-left 5%
        margin-right 5%

hr
    display block
    height 1px
    border 0
    border-top 2px solid #b92025
    margin 1em 0
    padding 0

.mapboxgl-ctrl-attrib-inner
    font-size 0.75rem
.inline-highlight
    padding 0.2em
    font-weight bold
    color white
    background-color #9f9f9f

.image-caption > p
    font-size 13px
    width 100%
    margin 0 10px 10px 10px
    color #9F9F9F
    font-style italic
    font-weight 400
    font-family: "Georgia", Arial,Helvetica Neue,Helvetica,sans-serif;
    @media only screen and (max-width: 768px)
        font-size 11px
.story-image
    margin-left 20%
    margin-right 20%
    @media only screen and (max-width: 768px)
        margin-left 0
        margin-right 0
        width 100%

.illustration
    margin 0
    width 100%

.scroll-container
    position relative
    margin-bottom 5%

.scroll__graphic
    position sticky
    top 0
    left 0
    width 100%
    margin 0
    -webkit-transform translate3d(0, 0, 0)
    -moz-transform: translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    background-color #FEF4E6
    z-index 0
    opacity 1

#deforestation_scrolly > .scroll__graphic
    background black

.scroll_graphic .chart
    position sticky

.scroll__text
    position relative

.step > p
    background-color rgba(255, 255, 255, 0.9)
    color #3b3b3b
    padding 1rem
    text-align center
    margin-left 10%
    margin-right 10%
    @media only screen and (max-width: 768px)
        margin-left 5%
        margin-right 5%


.step:last-child
    margin-bottom 0

.hidden
    opacity 0

.sticky-image
    @media only screen and (max-width: 768px)
        display flex
        align-items flex-end

.sticky > img
    position absolute
    @media only screen and (max-width: 768px)
        vertical-align 50%

.mapboxgl-canvas-container
    height 100vh
    width 100%

.static-mapbox-container
    position relative
.map-overlay
  position absolute
  bottom 0
  right 0
  background #fff
  margin-right 20px
  font-family Arial, sans-serif
  overflow auto
  border-radius 3px

#features
  top 0
  height 100px
  margin-top 20px
  width 250px

#legend
  padding 10px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)
  line-height 18px
  height 150px
  margin-bottom 40px
  width 100px

.legend-key
  display inline-block
  border-radius 20%
  width 10px
  height 10px
  margin-right 5px

