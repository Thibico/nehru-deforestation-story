/* CUSTOM STORY STYLE */

.section-title
    font-size 1.75rem
.story-text
    margin-left 20%
    margin-right 20%

.scroll-container
    position: relative
    margin-bottom: 5%

.scroll__graphic
    position: sticky
    top: 0
    left: 0
    width: 100%
    margin: 0
    -webkit-transform: translate3d(0, 0, 0)
    -moz-transform: translate3d(0, 0, 0)
    transform: translate3d(0, 0, 0)
    background-color: #FEF4E6
    z-index: 0
    opacity: 1

.scroll_graphic .chart
    position: sticky

.scroll__text
    position: relative

.step > p
    background-color: rgba(255, 255, 255, 0.9)
    color: #3b3b3b
    padding: 1rem
    text-align: center
    margin-left: 30%
    margin-right: 30%

.step:last-child
    margin-bottom: 0

.hidden
    opacity: 0

.sticky > img
    position: absolute

.mapboxgl-canvas-container
    height: 60vh

.static-mapbox-container
    position: relative
.map-overlay
  position: absolute
  bottom: 0
  right: 0
  background: #fff
  margin-right: 20px
  font-family: Arial, sans-serif
  overflow: auto
  border-radius: 3px

#features
  top: 0
  height: 100px
  margin-top: 20px
  width: 250px

#legend
  padding: 10px
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1)
  line-height: 18px
  height: 150px
  margin-bottom: 40px
  width: 100px

.legend-key
  display: inline-block
  border-radius: 20%
  width: 10px
  height: 10px
  margin-right: 5px

