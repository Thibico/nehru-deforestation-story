.intro
	margin 0 auto
	padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 30rem
		margin 0 auto
		text-align center
		color #222
		font-family "Georgia", Arial,Helvetica Neue,Helvetica,sans-serif
		font-size 32px
		line-height 36px
		font-weight 700
		@media only screen and (max-width: 768px)
			font-size 24px
			line-height 1.5em

		
	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
	
	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
	
	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
